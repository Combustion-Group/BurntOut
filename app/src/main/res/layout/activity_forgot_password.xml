<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.combustiongroup.burntout.ForgotPassword"
    android:background="@color/background_gray">

    <ImageView
        android:id="@+id/prev"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:padding="10dp"
        android:src="@drawable/image_icon_close_white"/>

    <ImageView
        android:id="@+id/avatar"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:src="@drawable/image_icon_avatar"/>

    <EditText
        android:id="@+id/email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/avatar"
        android:layout_marginTop="30dp"
        android:hint="@string/email"
        android:background="@drawable/style_edit_white_rounded"
        android:textColor="@android:color/white"
        android:textColorHint="@color/lighter_black"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"/>

    <TextView
        android:id="@+id/submit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/email"
        android:layout_marginTop="15dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:padding="8dp"
        android:textSize="16sp"
        android:textAlignment="center"
        android:background="@drawable/style_button_green"
        android:text="@string/reset_password"
        android:textColor="@android:color/white"/>
</RelativeLayout>
